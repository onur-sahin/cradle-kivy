#:kivy 2.1.0

#:import cradle Cradle
#:import lullaby Lullaby
#:import setting Setting
#:import air_quality AirQuality
#:import humidity Humidity
#:import temperature Temperature

MainPageLayout:



#<MainPageLayout@PageLayout>:

<MainPageLayout@BoxLayout>:

    canvas.before:
        Color:
            rgba: 0.2, 0.4, 0.5, 1
    
        Rectangle:
            pos: self.pos
            size: self.size
    
    GridLayout:
        id:MainGridLayout
        cols :1
        #padding: 2
        spacing:2
        
        BoxLayout:
            
            orientation: "horizontal"
            size_hint: 1, 0.3
            Label:
                text: "TEMPERATURE"
            Label:
                text: "AIR QUALITY"
            Label:
                text: "HUMIDITY"
        
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1.2
            
            TemperatureBoxLayout:
                id: tempature_boxlayout
                
            AirQualityBoxLayout:
                id: air_quality_boxlayout
        
            HumidityBoxLayout:
                id: humidity_boxlayout
                
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
        
            
            BackgroundLabel:
                text: tempature_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: tempature_boxlayout.warning_color
            
            BackgroundLabel:
                text: air_quality_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: air_quality_boxlayout.warning_color
                
            BackgroundLabel:
                text: humidity_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: humidity_boxlayout.warning_color

                

                

        BoxLayout:
            id:messages_box
            size_hint: 1, 1.2
            padding: 2

            BoxLayout:
                
                size_hint: 0.5, 1
                orientation:"vertical"
                spacing: 2
                
                Button:
                    id:message_btn
                    valign: "center"
                    halign: "left"
                    text:""
                    text_size: self.size
                    on_press:root.ids.cradleGridLayout.reset_msg_btn(self, "message_btn")
                    Image:
                        source:"./Images/baby_smile.png"
                        x:message_btn.size[0]*0.35
                        y:self.parent.pos[1]
                        size:message_btn.size
                        
                        
                        
                Button:
                    id:message_btn_vibration
                    text:""
                    valign: "center"
                    halign: "left"
                    text_size: self.size
                    on_press:root.ids.cradleGridLayout.reset_msg_btn(self, "message_btn_vibration")
                    Image:
                        source:"./Images/cradle.png"
                        x:message_btn_vibration.size[0]*0.35
                        y:self.parent.pos[1]
                        size:message_btn_vibration.size
                        
                        
                Button:
                        
                    id:message_btn_flame
                    text:""
                    valign: "center"
                    halign: "left"
                    text_size: self.size
                    on_press:root.ids.cradleGridLayout.reset_msg_btn(self, "message_btn_vibration")
                    Image:
                        source:"./Images/flame.png"
                        x:message_btn_flame.size[0]*0.35
                        y:self.parent.pos[1]
                        size:message_btn_flame.size
                    
                    
    
                
                
                    
                    
            BoxLayout:
                orientation:"vertical"
                Label:
                    text:"LAST TEN MESSAGES"
                    size_hint:1, 0.15
                MessageRecycleView:
                    id:messageRV
            

        LullabyWidget:
            id:lullabyWidget
            orientation: 'horizontal'
            size_hint: 1, 0.4

        
        CradleGridLayout:
            id:cradleGridLayout
            size_hint: 1, 2
              
                
        BoxLayout:
            size_hint: 1, 0.2
            Button:
                text: "ABOUT"
                

#    SettingGridLayout:
    
    
    
    
<MessageRecycleView@RecycleView>:

    viewclass:"MessageButton"
    
    RecycleBoxLayout:
        default_size: None, 20
        default_size_hint:1, None
        size_hint_y:None
        height:self.minimum_height
        orientation:'vertical'
    
    

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
