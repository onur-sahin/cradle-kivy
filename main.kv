#:kivy 2.1.0

#:import cradle Cradle
#:import lullaby Lullaby
#:import setting Setting
#:import air_quality AirQuality
#:import humidity Humidity
#:import tempature Tempature

MainPageLayout:


<MainPageLayout@PageLayout>:

    canvas.before:
        Color:
            rgba: 0.2, 0.4, 0.5, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    
    GridLayout:
        cols :1
        
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3
            Label:
                text: "TEMPATURE"
            Label:
                text: "AIR QUALITY"
            Label:
                text: "HUMIDITY"
        
        
        BoxLayout:
            orientation: 'horizontal'
            
            TempatureBoxLayout:
                id: tempature_boxlayout
                
            AirQualityBoxLayout:
                id: air_quality_boxlayout
        
            HumidityBoxLayout:
                id: humidity_boxlayout
                
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            
            BackgroundLabel:
                text: tempature_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: tempature_boxlayout.warning_color
            
            BackgroundLabel:
                text: air_quality_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: air_quality_boxlayout.warning_color
                
            BackgroundLabel:
                text: humidity_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: humidity_boxlayout.warning_color

                

                

        BoxLayout:
            size_hint: 1, 0.7
            Label:
                text: "buraya mesajlar yazÄ±lacak"
                height: "50dp"

        LullabyWidget:
            orientation: 'horizontal'
            size_hint: 1, 0.4

        
        CradleGridLayout:
            size_hint: 1, 1
            
            
        BoxLayout:
            
            
            BoxLayout:
                orientation:"vertical"
                
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 0.8
                    Rectangle:
                        size:self.size
                        pos:self.pos
                
                
                    
                Slider:
                    id: slider_rocking_duration
                    min: 10
                    max: 900
                    value: 10
                    on_touch_move: None
                
                BoxLayout:
                    
                    Label:
                        size_hint:0.3, 1
                        text: "  " + str(int(slider_rocking_duration.value/60)) + " min." if slider_rocking_duration.value >=60 else str(int(slider_rocking_duration.value))+" sec."
                        halign:"center"
                        
                    Label:
                        text:"AUTO ROCKING DURATION"
                        
                
                        
            BoxLayout:
                orientation:"vertical"
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 0.8
                    Rectangle:
                        size:self.size
                        pos:self.pos
                
                Slider:
                    id: slider_listening_sensitivity
                    min: 0
                    max: 100
                    value: 50
                    on_touch_move: None
            
                BoxLayout:
                    Label:
                        size_hint:0.3, 1
                        text:"  "+str(int(slider_listening_sensitivity.value)) + "%"
                        halign:"center"
                    
                    Label:
                        text:"LISTENING SENSITIVITY"
                    
                
            
                
            
                
                
        BoxLayout:
            size_hint: 1, 0.5
            Button:
                text: "ABOUT"

    SettingGridLayout:
    
    
    

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
