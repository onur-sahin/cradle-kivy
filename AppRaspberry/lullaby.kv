#:kivy 2.1.0

<LullabyWidget>:

 

    Button:
        id:btn_play
        text:"play\npause"
        on_press: root.play()

    Button:
        text:"stop"
        on_press: root.stop()

    Button:
        text:"replay"
        on_press: root.replay()
    Button:
        text:"next"
        on_press: root.next()
    Button:
        text:"back"
        on_press: root.back()

    Button:
        text:"Load"
        on_release: root.show_load()
        
    ToggleButton:
        id:btn_auto_play
        text:"auto\nplay"
        on_state:root.auto_play()
        
    Image:
        source: "./Images/sound_icon.png"
        size_hint: 0.7, 1

    
    Slider:
        orientation: "horizontal"
        size_hint: 3.5, 1
        id: slider_sound
        min: 0
        max: 100
        value: root.lullaby_volume
        on_touch_move: root.on_touch_music_volume_slider()
   


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            dirselect: True
            path:root.path
            # filters: [lambda folder, filename: not filename.endswith('')]

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load/Select Music"
                on_press: root.load(filechooser.path, filechooser.selection)
                on_release: root.cancel()
