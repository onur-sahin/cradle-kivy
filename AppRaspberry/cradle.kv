#:kivy 2.1.0

<CradleGridLayout>:
    
    cols : 1
    
    BoxLayout:

        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: 0.2, 0.4, 0.5, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        Button:
            id: btn_cradle
            text: 'CRADLE'
            on_press: root.on_press_btn_cradle(btn_cradle, btn_stop)
            disabled: False

        Button:
            id: btn_stop
            text: 'STOP'
            on_press: root.on_press_btn_stop(btn_cradle, btn_stop)
            disabled: True

        Image:
            source: "./Images/speed_icon.png"
            
            size_hint: 0.2, 1
            
        Slider:
            id: slider_speed
            min: 0
            max: 100
            value: root.motor_speed
            on_touch_move: root.on_touch_move_speed_slider(self)
            

    BoxLayout:
        orientation: 'horizontal'
        
        ToggleButton:
            id: auto_start_cradle
            text: "AUTO START CRADLE\n             " + "ON" if self.state=="down" else  "AUTO START CRADLE\n             " + "OFF"
            on_state: root.on_state_btn_auto_start(auto_start_cradle, auto_stop_cradle, btn_cradle, btn_stop)
        
        ToggleButton:
            id: auto_stop_cradle
            text: "AUTO STOP CRADLE\n              " +  "ON" if self.state=="down" else "AUTO STOP CRADLE\n              " + "OFF"
            on_state: root.on_state_btn_auto_stop(auto_start_cradle, auto_stop_cradle, btn_cradle, btn_stop)


            
    
         
        
