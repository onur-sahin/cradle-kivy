#:kivy 2.1.0

#:import cradle Cradle
#:import lullaby Lullaby
#:import setting Setting
#:import air_quality AirQuality
#:import humidity Humidity
#:import temperature Temperature

MainPageLayout:



#<MainPageLayout@PageLayout>:

<MainPageLayout@BoxLayout>:

    canvas.before:
        Color:
            rgba: 0.2, 0.4, 0.5, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    
    GridLayout:
        id:MainGridLayout
        
        cols :1
        
        BoxLayout:
            
            orientation: "horizontal"
            size_hint: 1, 0.3
            Label:
                text: "TEMPERATURE"
            Label:
                text: "AIR QUALITY"
            Label:
                text: "HUMIDITY"
        
        
        BoxLayout:
            orientation: 'horizontal'
            
            TemperatureBoxLayout:
                id: tempature_boxlayout
                
            AirQualityBoxLayout:
                id: air_quality_boxlayout
        
            HumidityBoxLayout:
                id: humidity_boxlayout
                
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            
            BackgroundLabel:
                text: tempature_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: tempature_boxlayout.warning_color
            
            BackgroundLabel:
                text: air_quality_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: air_quality_boxlayout.warning_color
                
            BackgroundLabel:
                text: humidity_boxlayout.warning_label
                font_size:self.height*0.8
                background_color: humidity_boxlayout.warning_color

                

                

        BoxLayout:
    
            Button:
                id:message_btn
                size_hint: 0.5, 1
                text:"NO MESSAGE"
                on_press:root.ids.cradleGridLayout.reset_msg_btn(message_btn)
                #Label:
                #    text: str(root.ids.cradleGridLayout.resp)
                #    height: "50dp"
            BoxLayout:
                orientation:"vertical"
                Label:
                    text:"LAST TEN MESSAGES"
                    size_hint:1, 0.15
                MessageRecycleView:
                    id:messageRV
            

        LullabyWidget:
            id:lullabyWidget
            orientation: 'horizontal'
            size_hint: 1, 0.4

        
        CradleGridLayout:
            id:cradleGridLayout
            size_hint: 1, 2
            
                
                
        BoxLayout:
            size_hint: 1, 0.5
            Button:
                text: "ABOUT"

#    SettingGridLayout:
    
    
    
    
<MessageRecycleView@RecycleView>:

    viewclass:"MessageButton"
    
    RecycleBoxLayout:
        default_size: None, 20
        default_size_hint:1, None
        size_hint_y:None
        height:self.minimum_height
        orientation:'vertical'
    
    

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
