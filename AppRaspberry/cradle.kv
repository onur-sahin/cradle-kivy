#:kivy 2.1.0

<CradleGridLayout>:
    id:cradleGridLayout
    
    cols : 1
    
    BoxLayout:
        size_hint: 1, 0.5
        orientation: 'horizontal'
        spacing: 2
        padding: 2

        canvas.before:
            Color:
                rgba: 0.2, 0.4, 0.5, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        Button:
            id: btn_cradle
            text: 'CRADLE'
            on_press: root.on_press_btn_cradle()
            disabled: False

        Button:
            id: btn_stop
            text: 'STOP'
            on_press: root.on_press_btn_stop(btn_cradle, btn_stop)
            disabled: True

        Image:
            source: "./Images/speed_icon.png"
            
            size_hint: 0.2, 1
            
        Slider:
            id: slider_speed
            min: 25
            max: 100
            value: root.motor_speed
            on_touch_move: root.on_touch_move_speed_slider()
            

    BoxLayout:
        spacing:2
        padding:2
        size_hint: 1, 0.5
        orientation: 'horizontal'
        
        ToggleButton:
            id: auto_start_cradle
            text: "AUTO START CRADLE\n             " + "ON" if self.state=="down" else  "AUTO START CRADLE\n             " + "OFF"
            on_state: root.on_state_btn_auto_start()
        
        ToggleButton:
            id: auto_stop_cradle
            text: "AUTO STOP CRADLE\n              " +  "ON" if self.state=="down" else "AUTO STOP CRADLE\n              " + "OFF"
            on_state: root.on_state_btn_auto_stop()



    BoxLayout:
        size_hint: 1, 0.5
                
        BoxLayout:
            orientation:"vertical"
            
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.8
                Rectangle:
                    size:self.size
                    pos:self.pos
            
            
                
            Slider:
                id: slider_rocking_duration
                min: 10
                max: 900
                value: 10
                on_touch_move: None
            
            BoxLayout:
                
                Label:
                    size_hint:0.3, 1
                    text: "  " + str(int(slider_rocking_duration.value/60)) + " min." if slider_rocking_duration.value >=60 else str(int(slider_rocking_duration.value))+" sec."
                    halign:"center"
                    
                Label:
                    text:"AUTO ROCKING DURATION"
                    
            
                    
        BoxLayout:
            orientation:"vertical"
            padding: 2
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.8
                Rectangle:
                    size:self.size
                    pos:self.pos
            
            Slider:
                id: slider_listening_sensitivity
                min: 5.0
                max: 99.0
                value: root.listening_sensitivity
                on_touch_move: None
        
            BoxLayout:
                Label:
                    size_hint:0.3, 1
                    text:"  "+str(int(slider_listening_sensitivity.value)) + "%"
                    halign:"center"
                
                Label:
                    text:"LISTENING SENSITIVITY"



